<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_refresh"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/blue_color"
                android:text="自定义下拉刷新" />

            <Button
                android:id="@+id/btn_search"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@color/blue_color"
                android:text="根据键盘显示按钮" />

            <Button
                android:id="@+id/btn_other_search"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@color/blue_color"
                android:text="根据键盘显示按钮（2）" />

            <Button
                android:id="@+id/btn_down_list"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@color/blue_color"
                android:text="下拉列表" />

            <Button
                android:id="@+id/btn_viewpage"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@color/blue_color"
                android:text="可以滑动带小点的页面" />

            <Button
                android:id="@+id/btn_tablayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@color/blue_color"
                android:text="带图标的tablayout" />

            <Button
                android:id="@+id/btn_guide"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@color/blue_color"
                android:text="蒙层的引导页面" />

            <Button
                android:id="@+id/btn_scrollView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@color/blue_color"
                android:text="点击按钮滑动到指定位置" />


            <Button
                android:id="@+id/btn_image"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@color/blue_color"
                android:text="图片验证" />

            <Button
                android:id="@+id/btn_more_guide"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@color/blue_color"
                android:text="单个页面多个遮罩" />
            <Button
                android:id="@+id/btn_location"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@color/blue_color"
                android:text="定位" />

            <Button
                android:id="@+id/btn_time"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@color/blue_color"
                android:text="日历弹框" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>